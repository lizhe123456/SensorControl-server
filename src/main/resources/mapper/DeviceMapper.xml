  <insert id="save" parameterType="com.zlcm.server.model.device.Device">
    insert into device
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="did != null">
        did,
      </if>
      <if test="name != null">
        name,
      </if>
      <if test="type != null">
        type,
      </if>
      <if test="dstate != null">
        dstate,
      </if>
      <if test="dip != null">
        dip,
      </if>
      <if test="dlongitude != null">
        dlongitude,
      </if>
      <if test="dlatitude != null">
        dlatitude,
      </if>
      <if test="mac != null">
        mac,
      </if>
      <if test="dinfo != null">
        dinfo,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="did != null">
        #{did,jdbcType=VARCHAR},
      </if>
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="type != null">
        #{type,jdbcType=VARCHAR},
