        #{dinfo,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="update" parameterType="com.zlcm.server.model.device.Device">
    update device
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="type != null">
        type = #{type,jdbcType=VARCHAR},
      </if>
      <if test="dstate != null">
        dstate = #{dstate,jdbcType=TINYINT},
      </if>
      <if test="dip != null">
        dip = #{dip,jdbcType=VARCHAR},
      </if>
      <if test="dlongitude != null">
        dlongitude = #{dlongitude,jdbcType=DECIMAL},
