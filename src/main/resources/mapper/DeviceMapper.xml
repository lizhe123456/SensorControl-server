    select count(*)
    from device;
  </select>
  <select id="getPageList" resultType="java.lang.Integer">
    select *
    from device LIMIT #{page,jdbcType=INTEGER},#{size,jdbcType=INTEGER}
  </select>
  <select id="findDevices" parameterType="java.lang.Integer" resultType="com.zlcm.server.model.device.Device">
    SELECT * FROM device WHERE did = ANY ( SELECT did FROM user_bind_device WHERE user_id = #{uid})
  </select>

  <select id="findUsers" parameterType="java.lang.String" resultType="com.zlcm.server.model.device.Device">
    SELECT * FROM ucenter_user WHERE user_id = ANY ( SELECT user_bind_device.user_id FROM user_bind_device WHERE did = #{did})
  </select>

  <select id="peripheryDevices" parameterType="java.util.Map" resultType="com.zlcm.server.model.device.Device">
    SELECT * FROM device d WHERE #{minlat} <![CDATA[ <= ]]> d.dlatitude <![CDATA[ <= ]]> #{maxlat} AND
    #{minlng} <![CDATA[ <= ]]> d.dlongitude <![CDATA[ <= ]]> #{maxlng}
  </select>
  <select id="getDeviceFormMac" parameterType="java.lang.String" resultType="com.zlcm.server.model.device.Device">
    select *
    from device
    where mac = #{mac};
  </select>
