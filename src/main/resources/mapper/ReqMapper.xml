  </select>

  <select id="getPageList" parameterType="java.lang.Integer" resultType="com.zlcm.server.model.bean.Req">
    SELECT * FROM zlcm_req a  JOIN (select id from zlcm_req limit #{page},#{size}) b ON a.id = b.id
  </select>

